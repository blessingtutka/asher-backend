{
    "name": "asher-backend",
    "version": "1.0.0",
    "description": "Backend For the Asher Application",
    "main": "src/index.ts",
    "scripts": {
        "build": "tsc",
        "dev": "npx tsx watch src/index.ts",
        "migrate": "npx prisma migrate deploy",
        "generate": "npx prisma generate",
        "lint": "eslint 'src/**/*.ts'",
        "format": "prettier --write 'src/**/*.{ts,tsx}'",
        "prepare": "husky",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/blessingtutka/asher-backend.git"
    },
    "author": "blessingtutka",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/blessingtutka/asher-backend/issues"
    },
    "homepage": "https://github.com/blessingtutka/asher-backend#readme",
    "dependencies": {
        "@prisma/client": "^5.17.0",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "prisma": "^5.17.0",
        "prisma-client-lib": "^1.34.12"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.2",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.14.10",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^7.17.0",
        "@typescript-eslint/parser": "^7.17.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.1",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.7",
        "prettier": "^3.3.3",
        "prisma": "^5.16.1",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.4"
    },
    "rootDir": "src",
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
